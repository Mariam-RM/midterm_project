  <body>

    <div id="page_container">

      <div id="details_overall_container">

    <h1 style="font-family:Permanent Marker; text-align: center; font-size: 60px;"> Confirm Your Order </h1>
<div id="details_container">
    <div  id ="basket_overall_container">
      <div id="basket">
      <p><b> Name:</b> <%= name %>  </p>
      <p><b> Your Phone: </b><%= phone %>  </p>
      <ol>
      <% for (item of foodOrder){ %>
        <div class=item>

          <!-- <%=foodOrder[item]%> -->

         <li><b><p>Item:</b> <%= item.name %><p>
         <b><p>Quantity:</b> <%= item.quantity %> <p>
         <b><p>Item Cost: </b> <%= item.price %> <p> </li>

        <div>
      <% } %>
      </ol>
      <p><b><u>YOUR GRAND TOTAL: </b></u> <%= totalPrice %> </p>
    </div>
    </div>


    <div id="buttons_container">
    <form action="/order/send" method="POST">
      <input id="final_order_button" type="submit" value="Send Order">
    </form>

    <br>

   <a href="/" id="edit_order_button" style="text-decoration:none"> Edit Order </a>
    </div>

    </div>
    </div>
    </div>

